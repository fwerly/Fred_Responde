<Page xmlns="http://schemas.nativescript.org/tns.xsd" navigatingTo="navigatingTo">
    <ActionBar title="Don Fredon - Pocket Scrum" icon="" />

    <StackLayout orientation="vertical">
    <StackLayout>
      <Label text="Caixa de texto 1:" />
      <TextField hint="Digite algo na primeira caixa" />
    </StackLayout>
   
    <StackLayout>
      <Label text="Caixa de texto 2:" />
      <TextField hint="Digite algo na segunda caixa" />
    </StackLayout>
  </StackLayout>

    <StackLayout class="p-4">
        <Label text="Please tap me 25" class="text-3xl text-center" />
        <Button text="TAP" tap="{{ onTap }}" class="-primary" />
        <Label text="{{ message }}" class="text-lg text-center text-gray-400" textWrap="true" />
    </StackLayout>
</Page>

